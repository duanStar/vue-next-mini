{
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES5",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "removeComments": true,
    "sourceMap": false,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
  },
  "include": ["packages/*/src"]
}
